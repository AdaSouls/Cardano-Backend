{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "AdaSouls REST API",
    "description": "Specification of AdaSouls REST API",
    "termsOfService": "http://swagger.io/terms/"
  },
  "basePath": "/api/v1/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users/login": {
      "post": {
        "tags": ["Users"],
        "description": "Verifies the Cardano wallet signature of a user.",
        "operationId": "1",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "description": "Backend code",
            "required": true,
            "type": "string"
          },
          {
            "name": "sigData",
            "in": "body",
            "description": "Cardano wallet signature",
            "required": true,
            "schema": {
              "$ref": "#/definitions/signature"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User record response",
            "schema": {
              "$ref": "#/definitions/user"
            }
          }
        }
      }
    },
    "/users/{stakeAddress}/collections/invited": {
      "get": {
        "tags": ["Users"],
        "description": "Get collections a user has been invited as a signer.",
        "operationId": "2",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "description": "Backend code",
            "required": true,
            "type": "string"
          },
          {
            "name": "stakeAddress",
            "in": "path",
            "description": "User stake address",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of collections a user has been invited to as a signer",
            "schema": {
              "$ref": "#/definitions/collection"
            }
          }
        }
      }
    },
    "/users/{stakeAddress}/collections": {
      "get": {
        "tags": ["Collections"],
        "description": "Get user collections.",
        "operationId": "3",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "description": "Backend code",
            "required": true,
            "type": "string"
          },
          {
            "name": "stakeAddress",
            "in": "path",
            "description": "User stake address",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of user collections",
            "schema": {
              "$ref": "#/definitions/collection"
            }
          }
        }
      }
    },
    "/path/to/method/{someVariable}": {
      "delete": {
        "tags": ["Collections"],
        "description": "Deletes a something",
        "operationId": "4",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "someVariable",
            "in": "path",
            "description": "ID to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "delete response",
            "schema": {
              "$ref": "#/definitions/delete"
            }
          }
        }
      },
      "get": {
        "tags": ["Tag1"],
        "description": "Returns the status of something",
        "operationId": "5",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "someVariable",
            "in": "path",
            "description": "ID to fetch",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "response",
            "schema": {
              "$ref": "#/definitions/response1"
            }
          }
        }
      }
    }
  },
